<resources>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">#FF104872</item>
        <item name="android:colorButtonNormal">#FF104872</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="LoginTheme" parent="MyLoginTheme.Base">

        <item name="android:navigationBarColor">@color/navigationBarColor</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>
    <style name="MyLoginTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">#263238</item>
        <item name="colorPrimaryDark">#263238</item>
        <item name="colorAccent">#6BD7A9</item>

        <item name="colorButtonNormal">#6BD7A9</item>
        <item name="android:colorButtonNormal">#6BD7A9</item>

        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">#d1d1d1</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="StockTheme" parent="StockTheme.Base">

    </style>

    <style name="StockTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#1c2429</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">#FF104872</item>
        <item name="android:colorButtonNormal">#FF104872</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
    </style>

</resources>
